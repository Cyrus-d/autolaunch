{
  "name": "autolaunch",
  "displayName": "AutoLaunch",
  "description": "Automatically run tasks in tasks.json or launch config in launch.json",
  "version": "0.0.3",
  "keywords": ["run", "launch", "tasks", "debug", "auto"],
  "homepage": "https://github.com/philfontaine/autolaunch",
  "bugs": {
    "url": "https://github.com/philfontaine/autolaunch/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/philfontaine/autolaunch.git"
  },
  "publisher": "philfontaine",
  "license": "MIT",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": ["Other", "Debuggers"],
  "activationEvents": ["*"],
  "main": "./out/extension",
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "AutoLaunch configuration",
        "properties": {
          "autolaunch.config": {
            "description": "Array of {\"type\": \"task\" or \"launch\", \"name\": string}",
            "type": "array",
            "default": [],
            "items": {
              "type": "object",
              "required": ["type", "name"],
              "defaultSnippets": [
                {
                  "body": { "type": "task$1", "name": "$2" }
                }
              ],
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["task", "launch"]
                },
                "name": { "type": "string", "minLength": "1" }
              }
            },
            "defaultSnippets": [
              {
                "body": [{ "type": "task$1", "name": "$2" }]
              }
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^2.5.3",
    "vscode": "^1.1.5",
    "@types/node": "^7.0.43",
    "@types/mocha": "^2.2.42"
  }
}
